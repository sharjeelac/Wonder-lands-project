<% layout('layouts/boilerplate') -%>
<body>
  <div class="container py-5">
    <div class="mx-auto" style="max-width: 800px">
      <!-- Header Section -->
      <div class="d-flex align-items-center mb-5">
        <a
          href="/listings/<%= list._id %>"
          class="btn btn-outline-secondary rounded-circle me-3"
        >
          <i class="fas fa-arrow-left"></i>
        </a>
        <h2 class="mb-0 text-gradient-primary">Edit Listing</h2>
      </div>

      <!-- Form Container -->
      <div class="card border-0 shadow-lg py-4 px-3 px-md-5">
        <form
          action="/listings/<%= list._id %>?_method=PUT"
          method="post"
          class="needs-validation"
          novalidate
          enctype="multipart/form-data"
        >
          <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
              <div class="form-floating">
                <input
                  type="text"
                  name="listing[title]"
                  class="form-control form-control-lg"
                  id="title"
                  value="<%= list.title %>"
                  required
                />
                <label for="title" class="text-muted">
                  <i class="fas fa-heading me-2 text-primary"></i>Title
                </label>
              </div>

              <div class="form-floating mt-4">
                <input
                  type="number"
                  name="listing[price]"
                  class="form-control form-control-lg"
                  id="price"
                  value="<%= list.price %>"
                  required
                />
                <label for="price" class="text-muted">
                  <i class="fas fa-tag me-2 text-success"></i>Price per night
                </label>
              </div>
              <div>
                <img width="200px" src="<%= originalUrl %>" alt="" />
              </div>

              <div class="form-floating mt-4">
                <input
                  type="file"
                  name="listing[image]"
                  class="form-control form-control-lg"
                  id="image"
                  value="<%= list.image %>"
                />
                <label for="image" class="text-muted">
                  <i class="fas fa-image me-2 text-info"></i>Upload New Image
                </label>
              </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
              <div class="form-floating">
                <textarea
                  name="listing[description]"
                  class="form-control form-control-lg"
                  id="description"
                  style="height: 150px"
                  required
                >
<%= list.description %></textarea
                >
                <label for="description" class="text-muted">
                  <i class="fas fa-align-left me-2 text-warning"></i>Description
                </label>
              </div>

              <div class="form-floating mt-4">
                <input
                  type="text"
                  name="listing[location]"
                  class="form-control form-control-lg"
                  id="location"
                  value="<%= list.location %>"
                  required
                />
                <label for="location" class="text-muted">
                  <i class="fas fa-map-marker-alt me-2 text-danger"></i>Location
                </label>
              </div>

              <div class="form-floating mt-4">
                <input
                  type="text"
                  name="listing[country]"
                  class="form-control form-control-lg"
                  id="country"
                  value="<%= list.country %>"
                  required
                />
                <label for="country" class="text-muted">
                  <i class="fas fa-globe me-2 text-primary"></i>Country
                </label>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="mt-5 text-center">
            <button
              type="submit"
              class="btn btn-primary btn-lg px-5 py-3 gradient-button"
            >
              <i class="fas fa-save me-2"></i>Update Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
    .text-gradient-primary {
      background: linear-gradient(45deg, #6366f1, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .form-control {
      border: 2px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }

    .gradient-button {
      background: linear-gradient(45deg, #6366f1, #8b5cf6);
      border: none;
      transition: transform 0.2s ease;
    }

    .gradient-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
    }
  </style>

  <script>
    // Form validation script
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach((form) => {
        form.addEventListener(
          'submit',
          (event) => {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          },
          false,
        );
      });
    })();
  </script>
</body>
