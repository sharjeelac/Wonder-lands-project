<% layout('layouts/boilerplate') -%>
<body>
  <div class="container py-5">
    <div class="mx-auto" style="max-width: 800px;">
      <!-- Header Section -->
      <div class="d-flex align-items-center mb-5">
        <a href="/listings" class="btn btn-outline-secondary rounded-circle me-3">
          <i class="fas fa-arrow-left"></i>
        </a>
        <h2 class="mb-0 text-gradient-primary">Create New Listing</h2>
      </div>

      <!-- Form Container -->
      <div class="card border-0 shadow-lg py-4 px-3 px-md-5">
        <form action="/listings" method="post" class="needs-validation" novalidate>
          <!-- Form Grid -->
          <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
              <div class="form-floating">
                <input type="text"
                       name="listing[title]"
                       class="form-control form-control-lg"
                       id="title"
                       placeholder="Enter Title"
                       required>
                <label for="title" class="text-muted">
                  <i class="fas fa-heading me-2 text-primary"></i>Title
                </label>
                <div class="invalid-feedback">Please enter a title</div>
              </div>

              <div class="form-floating mt-4">
                <input type="number"
                       name="listing[price]"
                       class="form-control form-control-lg"
                       id="price"
                       placeholder="Enter Price"
                       required>
                <label for="price" class="text-muted">
                  <i class="fas fa-tag me-2 text-success"></i>Price per night
                </label>
                <div class="invalid-feedback">Please enter a Price</div>
              </div>

              <div class="form-floating mt-4">
                <input type="url"
                       name="listing[image]"
                       class="form-control form-control-lg"
                       id="image"
                       placeholder="Enter image URL"
                       required>
                <label for="image" class="text-muted">
                  <i class="fas fa-image me-2 text-info"></i>Image URL
                </label>
              </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
              <div class="form-floating">
                <textarea name="listing[description]"
                          class="form-control form-control-lg"
                          id="description"
                          style="height: 150px"
                          required>Description Here</textarea>
                <label for="description" class="text-muted">
                  <i class="fas fa-align-left me-2 text-warning"></i>Description
                </label>
                <div class="invalid-feedback">Please enter a Description</div>
              </div>

              <div class="form-floating mt-4">
                <input type="text"
                       name="listing[location]"
                       class="form-control form-control-lg"
                       id="location"
                       placeholder="Enter location"
                       required>
                <label for="location" class="text-muted">
                  <i class="fas fa-map-marker-alt me-2 text-danger"></i>Location
                </label>
                <div class="invalid-feedback">Please enter a Location</div>
              </div>

              <div class="form-floating mt-4">
                <input type="text"
                       name="listing[country]"
                       class="form-control form-control-lg"
                       id="country"
                       placeholder="Enter country"
                       required>
                <label for="country" class="text-muted">
                  <i class="fas fa-globe me-2 text-primary"></i>Country
                </label>
                <div class="invalid-feedback">Please enter a Country</div>
              </div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="mt-5 text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5 py-3 gradient-button">
              <i class="fas fa-plus-circle me-2"></i>Create Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
    .text-gradient-primary {
      background: linear-gradient(45deg, #6366f1, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .form-control {
      border: 2px solid #e2e8f0;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }

    .form-floating label {
      transition: all 0.3s ease;
    }

    .gradient-button {
      background: linear-gradient(45deg, #6366f1, #8b5cf6);
      border: none;
      transition: transform 0.2s ease;
    }

    .gradient-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(99, 102, 241, 0.3);
    }

    .invalid-feedback {
      font-size: 0.875em;
    }

    .invalid-feedback {
      display: none;
      width: 100%;
      margin-top: 0.25rem;
      font-size: 0.875em;
      color: #dc3545;
    }

    .was-validated .form-control:invalid {
      border-color: #dc3545;
      padding-right: calc(1.5em + 0.75rem);
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
      background-repeat: no-repeat;
      background-position: right calc(0.375em + 0.1875rem) center;
      background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
    }
  </style>

  <script>
    // Form validation script
    (() => {
      'use strict'
      const forms = document.querySelectorAll('.needs-validation')
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
          }
          form.classList.add('was-validated')
        }, false)
      })
    })()
  </script>
</body>
