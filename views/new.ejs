<% layout('layouts/boilerplate') -%>
<body>
  <div class="container mx-auto py-10 px-5">
    <div class="mx-auto max-w-3xl">
      <!-- Header Section -->
      <div class="flex items-center mb-8">
        <a href="/listings" class="inline-flex items-center justify-center border border-gray-300 text-gray-700 rounded-full mr-3 p-3 hover:bg-gray-100">
          <i class="fas fa-arrow-left"></i>
        </a>
        <h2 class="text-3xl font-bold text-gradient-primary">Create New Listing</h2>
      </div>

      <!-- Form Container -->
      <div class="bg-white shadow-lg rounded-lg py-6 px-6">
        <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
          <!-- Form Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <!-- Left Column -->
            <div class="space-y-4">
              <!-- Title -->
              <div>
                <label for="title" class="block text-gray-700 mb-2">
                  <i class="fas fa-heading text-indigo-600 mr-2"></i>Title
                </label>
                <input type="text" name="listing[title]" id="title" placeholder="Enter Title" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300">
                <p class="text-red-500 text-sm mt-1 hidden">Please enter a title</p>
              </div>
              <!-- Price -->
              <div>
                <label for="price" class="block text-gray-700 mb-2">
                  <i class="fas fa-tag text-green-600 mr-2"></i>Price per night
                </label>
                <input type="number" name="listing[price]" id="price" placeholder="Enter Price" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-300">
                <p class="text-red-500 text-sm mt-1 hidden">Please enter a Price</p>
              </div>
              <!-- Upload Image -->
              <div>
                <label for="image" class="block text-gray-700 mb-2">
                  <i class="fas fa-image text-blue-600 mr-2"></i>Upload Image
                </label>
                <input type="file" name="listing[image]" id="image" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-300">
              </div>
            </div>
            <!-- Right Column -->
            <div class="space-y-4">
              <!-- Description -->
              <div>
                <label for="description" class="block text-gray-700 mb-2">
                  <i class="fas fa-align-left text-yellow-600 mr-2"></i>Description
                </label>
                <textarea name="listing[description]" id="description" placeholder="Description Here" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-yellow-300" style="height: 150px"></textarea>
                <p class="text-red-500 text-sm mt-1 hidden">Please enter a Description</p>
              </div>
              <!-- Location -->
              <div>
                <label for="location" class="block text-gray-700 mb-2">
                  <i class="fas fa-map-marker-alt text-red-600 mr-2"></i>Location
                </label>
                <input type="text" name="listing[location]" id="location" placeholder="Enter location" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-red-300">
                <p class="text-red-500 text-sm mt-1 hidden">Please enter a Location</p>
              </div>
              <!-- Country -->
              <div>
                <label for="country" class="block text-gray-700 mb-2">
                  <i class="fas fa-globe text-indigo-600 mr-2"></i>Country
                </label>
                <input type="text" name="listing[country]" id="country" placeholder="Enter country" required class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300">
                <p class="text-red-500 text-sm mt-1 hidden">Please enter a Country</p>
              </div>
            </div>
          </div>
          <!-- Submit Button -->
          <div class="mt-8 text-center">
            <button type="submit" class="inline-flex items-center bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white font-bold py-3 px-8 rounded-lg transition transform hover:-translate-y-1">
              <i class="fas fa-plus-circle mr-2"></i>Create Listing
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <style>
    .text-gradient-primary {
      background: linear-gradient(45deg, #6366f1, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>

  <script>
    // Form validation script
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach((form) => {
        form.addEventListener('submit', (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>
</body>
