<% layout('layouts/boilerplate') -%>
<div class="container mx-auto py-10 mb-8">
  <div class="max-w-lg mx-auto">
    <h1 class="text-3xl font-bold text-center mb-6">SignUp on Wonder Lands</h1>
    <form action="/signup" method="post" novalidate class="space-y-4">
      <!-- Username Field -->
      <div>
        <label for="username" class="block text-gray-700 font-medium mb-1">
          <i class="fas fa-user text-indigo-600 mr-1"></i>Username
        </label>
        <input
          type="text"
          name="username"
          id="username"
          required
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        />
      </div>
      <!-- Email Field -->
      <div>
        <label for="email" class="block text-gray-700 font-medium mb-1">
          <i class="fas fa-envelope text-indigo-600 mr-1"></i>Email
        </label>
        <input
          type="email"
          name="email"
          id="email"
          required
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        />
      </div>
      <!-- Password Field -->
      <div>
        <label for="password" class="block text-gray-700 font-medium mb-1">
          <i class="fas fa-lock text-indigo-600 mr-1"></i>Password
        </label>
        <input
          type="password"
          name="password"
          id="password"
          required
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        />
      </div>
      <!-- Submit Button -->
      <div class="mt-4">
        <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg transition duration-200">
          SignUp
        </button>
      </div>
    </form>
  </div>
</div>
