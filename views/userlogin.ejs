<% layout('layouts/boilerplate') -%>

<div class="container mx-auto py-10 mb-8">
  <div class="max-w-lg mx-auto mb-4">
    <h1 class="text-3xl font-bold text-center mb-6">Login on Wonder Lands</h1>
    <form action="/login" method="post" novalidate class="space-y-4">
      <div>
        <label for="username" class="block text-gray-700 font-medium mb-1">
          <i class="fas fa-user text-indigo-600 mr-1"></i>Username
        </label>
        <input
          type="text"
          name="username"
          id="username"
          required
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        />
      </div>
      <div>
        <label for="password" class="block text-gray-700 font-medium mb-1">
          <i class="fas fa-lock text-indigo-600 mr-1"></i>Password
        </label>
        <input
          type="password"
          name="password"
          id="password"
          required
          class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-indigo-300"
        />
      </div>
      <button type="submit" class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg mt-4">
        Login
      </button>
    </form>
  </div>
</div>
