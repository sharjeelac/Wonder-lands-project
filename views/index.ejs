<% layout('layouts/boilerplate') -%>

<div class="container-fluid px-lg-5">
  <div class="mb-5 text-center">
    <h2 class="display-4 fw-bold mb-3 animate-gradient">
      Discover Extraordinary Stays
    </h2>
    <p class="lead text-muted mb-0">Curated collection of unique homes & experiences</p>
  </div>

  <div class="row g-4 row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xxl-4">
    <% listings.forEach(list => { %>
    <div class="col">
      <div class="card h-100 border-0 overflow-hidden shadow-sm hover-shadow-lg transition-all">
        <a href="/listings/<%= list._id %>" class="text-decoration-none text-dark position-relative">
          <div class="position-relative overflow-hidden">
            <div class="ratio ratio-4x3">
              <img
                src="<%= list.image.url %>"
                class="object-fit-cover"
                alt="<%= list.title %>"
                loading="lazy"
              >
            </div>

            <div class="position-absolute bottom-0 start-0 end-0 p-3 bg-gradient-dark-top">
              <div class="d-flex justify-content-between align-items-center text-white">
                <div>
                  <h5 class="mb-0 fw-semibold"><%= list.title %></h5>
                  <div class="d-flex align-items-center gap-2 mt-1">
                    <i class="fas fa-map-marker-alt text-light opacity-75"></i>
                    <span class="small"><%= list.location %></span>
                  </div>
                </div>

              </div>
            </div>
          </div>

          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <span class="h4 text-primary fw-bold">$<%= list.price %></span>
                <span class="text-muted">/night</span>
              </div>
              <div class="text-muted small">
                <i class="fas fa-users me-1"></i><%= list.guests %> guests
              </div>
            </div>
          </div>
        </a>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<style>
  .animate-gradient {
    background: linear-gradient(45deg, #6366f1, #8b5cf6, #ec4899);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 8s ease infinite;
  }

  .hover-shadow-lg {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border-radius: 1rem;
  }

  .hover-shadow-lg:hover {
    transform: translateY(-4px);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15) !important;
  }

  .bg-gradient-dark-top {
    background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.7) 100%);
  }

  .object-fit-cover {
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .card:hover .object-fit-cover {
    transform: scale(1.03);
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50% }
    50% { background-position: 100% 50% }
    100% { background-position: 0% 50% }
  }

  .btn-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
