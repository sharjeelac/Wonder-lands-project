<% layout('layouts/boilerplate') -%>

<div class="container mx-auto px-5">
  <div class="mb-12 text-center">
    <h2 class="text-4xl font-bold mb-3 animate-gradient">
      Discover Extraordinary Stays
    </h2>
    <p class="text-lg text-gray-500 mb-0">
      Curated collection of unique homes &amp; experiences
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-4">
    <% listings.forEach(list => { %>
      <div>
        <div class="overflow-hidden bg-white rounded-xl shadow-md hover:shadow-xl transition-transform duration-300 transform hover:-translate-y-1">
          <a href="/listings/<%= list._id %>" class="relative block">
            <div class="relative overflow-hidden">
              <div class="aspect-[4/3]">
                <img
                  src="<%= list.image.url %>"
                  alt="<%= list.title %>"
                  loading="lazy"
                  class="w-full h-full object-cover transition-transform duration-300"
                >
              </div>
              <div class="absolute bottom-0 left-0 right-0 p-3 bg-gradient-to-t from-black to-transparent">
                <div class="flex justify-between items-center text-white">
                  <div>
                    <h5 class="mb-0 font-semibold"><%= list.title %></h5>
                    <div class="flex items-center gap-2 mt-1">
                      <i class="fas fa-map-marker-alt text-white opacity-75"></i>
                      <span class="text-sm"><%= list.location %></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="p-4">
              <div class="flex justify-between items-center">
                <div>
                  <span class="text-2xl text-blue-600 font-bold">$<%= list.price %></span>
                  <span class="text-gray-500">/night</span>
                </div>
                <div class="text-gray-500 text-sm">
                  <i class="fas fa-users mr-1"></i><%= list.guests %> guests
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<style>
  .animate-gradient {
    background: linear-gradient(45deg, #6366f1, #8b5cf6, #ec4899);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 8s ease infinite;
  }

  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>
