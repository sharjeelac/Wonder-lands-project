<% layout('layouts/boilerplate') -%>
<body>
  <div class="container py-5">
    <!-- Back Button -->
    <a href="/listings" class="btn btn-outline-secondary mb-4">
      <i class="fas fa-arrow-left me-2"></i>All Listings
    </a>

    <!-- Image Header -->
    <div class="position-relative mb-4">
      <div class="image-overlay"></div>
      <img src="<%= list.image %>" 
           class="img-fluid rounded-3 shadow-lg w-100" 
           style="height: 400px; object-fit: cover;" 
           alt="<%= list.title %>">
      <div class="position-absolute bottom-0 start-0 p-4 text-white">
        <h1 class="display-5 fw-bold mb-2"><%= list.title %></h1>
        <h3 class="fw-semibold">$<%= list.price %> <span class="fs-5 fw-normal">/ night</span></h3>
      </div>
    </div>

    <!-- Details Grid -->
    <div class="row g-4 mb-5">
      <div class="col-md-8">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body">
            <h4 class="card-title fw-semibold mb-3">
              <i class="fas fa-info-circle text-primary me-2"></i>Description
            </h4>
            <p class="card-text fs-5 text-muted"><%= list.description %></p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card border-0 shadow-sm">
          <div class="card-body">
            <h5 class="fw-semibold mb-4">Listing Details</h5>
            
            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-map-marker-alt text-danger fs-5 me-3"></i>
              <div>
                <p class="mb-0 fw-medium">Location</p>
                <p class="mb-0 text-muted"><%= list.location %></p>
              </div>
            </div>

            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-flag text-success fs-5 me-3"></i>
              <div>
                <p class="mb-0 fw-medium">Country</p>
                <p class="mb-0 text-muted"><%= list.country %></p>
              </div>
            </div>

            <div class="d-flex align-items-center">
              <i class="fas fa-tag text-warning fs-5 me-3"></i>
              <div>
                <p class="mb-0 fw-medium">Price</p>
                <p class="mb-0 text-muted">$<%= list.price %> / night</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex gap-3 mb-5">
      <a href="/listings/<%= list._id %>/edit" class="btn btn-primary px-4 py-2">
        <i class="fas fa-edit me-2"></i>Edit Listing
      </a>
      <form action="/listings/<%= list._id %>?_method=DELETE" method="post">
        <button type="submit" class="btn btn-danger px-4 py-2">
          <i class="fas fa-trash me-2"></i>Delete Listing
        </button>
      </form>
    </div>
  </div>

  <style>
    .image-overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(180deg, rgba(0,0,0,0) 50%, rgba(0,0,0,0.6) 100%);
      border-radius: 0.75rem;
    }

    .card {
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1) !important;
    }

    .btn {
      transition: all 0.2s ease;
      display: inline-flex;
      align-items: center;
    }
  </style>
</body>